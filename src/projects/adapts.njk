---
layout: "layouts/level_2.njk"
title: ADAPTS
---

{% from "macros/primitives.njk" import tooltag %}

<div class="relative">
  <div id="top"></div>

  <!-- ================================================= -->
  <!-- 01 INTRO -->
  <!-- ================================================= -->
  <div id="intro" class="mt-32 pg-section">
    <div class="pg-padding">
      <div class="md:flex md:space-x-12 items-start justify-start">
        <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
          <p class="section-label">Featured Project</p>
          <h1 class="jumbo-xl text-white">ADAPTS</h1>

          <div class="mt-12 space-y-8">
            {% for item in projects.adapts.stack1 %}
            <div>
              <p class="list-label mb-1">{{ item.label }}</p>
              <p class="p">{{ item.content }}</p>
            </div>
            {% endfor %}
          </div>
        </div>

        <!-- ================================================= -->
        <!-- 02 (Desktop) -->
        <!-- ================================================= -->
        <div class="flex-[2_2_0%]">
          <p class="section-label opacity-0">02</p>

          <h2 class="h1-sub h1-max-w pt-2">{{ projects.adapts.intro }}</h2>
        </div>
      </div>
    </div>
  </div>

  <!-- ================================================= -->
  <!-- Image break -->
  <!-- ================================================= -->
  <!-- <div class="pg-padding-mobile-expand"> -->
  <div class="relative pg-section">
    <!-- <img src="/assets/images/ADAPTS-text-white.png" alt="ADAPTS" class="absolute left-0 top-0 w-full opacity-5" /> -->
    <!-- <div class="pg-padding mt-12"> -->
    <div class="pg-padding">
      <img src="/assets/images/adapts-double-screen.png" alt="ADAPTS" class="w-full object-contain" />
    </div>
  </div>

  <!-- ================================================= -->
  <!-- 03 Bio -->
  <!-- ================================================= -->
  <div class="pg-section pg-section-border">
    <div class="pg-padding">
      <p class="section-label">About the Company</p>

      <div class="md:flex space-y-12 md:space-y-0 md:space-x-12 items-start justify-start">
        <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
          <div class="space-y-8">
            {% for item in projects.adapts.about_stack %}
            <div>
              <p class="list-label mb-1">{{ item.label }}</p>
              <p class="p">{{ item.content }}</p>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="flex-[2_2_0%]">
          <!-- <p class="section-label">01 • Intro</p> -->
          <h2 class="h1-sub">{{ projects.adapts.about_company }}</h2>
        </div>
      </div>
    </div>
  </div>

  <!-- ================================================= -->
  <!-- 04 The problem -->
  <!-- ================================================= -->
  <div class="pg-section pg-section-border">
    <div class="pg-padding">
      <p class="section-label">The Problem</p>

      <div class="md:flex space-y-12 md:space-y-0 md:space-x-12 items-start justify-start">
        <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
          <!-- Nothing here -->
        </div>

        <div class="flex-[2_2_0%]">
          <!-- <p class="section-label">01 • Intro</p> -->
          <h2 class="h1-sub font-semibold text-white/90">{{ projects.adapts.problem1 }}</h2>
          <br />
          <br />
          <h3 class="h1-sub">{{ projects.adapts.problem2 }}</h3>
        </div>
      </div>
    </div>
  </div>

  <div class="dark bg-zinc-100">
    <!-- ================================================= -->
    <!-- 05 The Solution -->
    <!-- ================================================= -->
    <div id="solution" class="pg-section">
      <div class="pg-padding">
        <div class="md:flex space-y-12 md:space-y-0 md:space-x-12 items-start justify-start">
          <div class="flex-[2_2_0%]">
            <p class="section-label">The Solution</p>
            <h1 class="h1 h1-max-w">{{ projects.adapts.solution1 }}</h1>
          </div>

          <!-- ================================================= -->
          <!-- 05 (Desktop) -->
          <!-- ================================================= -->
          <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
            <p class="section-label opacity-0">05</p>

            <div class="space-y-8">
              {% for item in projects.adapts.solution_stack %}
              <div>
                <p class="list-label mb-2">{{ item.label }}</p>
                <p class="p">{{ item.content }}</p>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ================================================= -->
    <!-- Video -->
    <!-- ================================================= -->
    <div class="pg-section relative">
      <img src="/assets/images/ADAPTS-text.png" alt="ADAPTS" class="absolute left-0 top-0 w-full opacity-5" />

      <div class="mt-6 md:mt-12 pg-padding">
        <div class="pt-6 bg-zinc-700 shadow-xl rounded-md">
          <video class="w-full object-contain rounded-b-md" autoplay loop controls>
            <source src="/assets/images/adapts-demo-1.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>

    <!-- ================================================= -->
    <!-- Functionality -->
    <!-- ================================================= -->
    <div class="pg-section pg-section-border">
      <div class="pg-padding">
        <p class="section-label">How does it work?</p>

        <div class="md:flex space-y-12 md:space-y-0 md:space-x-12 items-start justify-start">
          <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
            <!-- Nothing here -->
          </div>

          <div class="flex-[2_2_0%]">
            <h3 class="h1-sub">{{ projects.adapts.functionality }}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- ================================================= -->
    <!-- Step by step -->
    <!-- ================================================= -->
    <div class="pg-section relative">
      <div class="pg-padding-mobile-expand">
        <div class="overflow-hidden">
          <img src="/assets/images/adapts-example-1.png" alt="ADAPTS" class="min-w-[30rem] w-full object-contain" />
        </div>
      </div>
      <div class="pg-padding">
        <img src="/assets/images/adapts-dashboard-1.png" alt="ADAPTS Dashboard Demo" class="w-full object-contain" />
      </div>
    </div>

    <div class="pg-section">
      <div class="pg-padding">
        <div class="md:flex md:space-x-12 items-start justify-start">
          <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
            <!-- Nothing here -->
          </div>

          <div class="flex-[2_2_0%]">
            <p class="dark:text-zinc-500 h1">{{ projects.adapts.closing1 }}</p>
            <!-- <h2 class="dark:text-zinc-500 h1 text-7xl font-medium leading-tight">{{ projects.adapts.closing2 }}</h2> -->
            <br />
            <h2 class="h1 font-medium leading-tight">{{ projects.adapts.closing2 }}</h2>
          </div>
        </div>
      </div>
    </div>

    <!-- end white  -->
  </div>

  <!-- ================================================= -->
  <!-- 03 Bio -->
  <!-- ================================================= -->
  <div class="pg-section pg-section-border">
    <div class="pg-padding">
      <p class="section-label">Under the hood</p>

      <div class="md:flex space-y-12 md:space-y-0 md:space-x-12 items-start justify-start">
        <div class="flex-1 min-w-[15rem] lg:min-w-[20rem]">
          <div class="space-y-8">
            {% for item in projects.adapts.tech_stack %}
            <div>
              <p class="list-label mb-3">{{ item.label }}</p>
              <div class="flex items-start justify-start flex-wrap mb-4">
                {% for tag in item.tags %}
                <!--  -->
                {{ tooltag(tag) }}
                <!--  -->
                {% endfor %}
              </div>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="flex-[2_2_0%]">
          <p class="h1-sub">{{ projects.adapts.tech }}</p>

          <!-- stack image -->
          <img
            src="/assets/images/adapts-arch.png"
            alt="ADAPTS tech stack"
            class="my-12 md:my-16 w-full object-contain"
          />

          <div class="space-y-10">
            {% for sec in projects.adapts.tech3 %}
            <div>
              <h3 class="h1-sub font-medium mb-2">{{ sec.title }}</h3>
              {% for p in sec.content %}
              <p class="h1-sub">{{ p }}</p>
              {% endfor %}
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ================================================= -->
</div>
