{% import "macros/components.njk" as components %}

<!-- chat links -->
{% macro chat(data) %}
<div class="space-y-3 md:space-y-1">
  <p class="list-label mb-2">Chat</p>
  {% for chat in data.chat %}
  <div class="flex justify-center md:justify-start items-center flex-wrap">
    <p class="p">
      <a href="{{ chat.url }}" class="hover:underline mr-1">
        <span>{{ chat.title }}</span>
      </a>
    </p>
    <!-- TODO: COPY buttons here -->
    {{ components.copy(chat.copy) }}
  </div>
  {% endfor %}
</div>
{% endmacro %}

<!-- connect links -->
{% macro connect(data) %}
<div class="space-y-3 md:space-y-1">
  <p class="list-label mb-2">Connect</p>
  {% for link in data.connect %}
  <p class="p">
    <a
      target="_blank"
      rel="noreferrer"
      href="{{ link.url }}"
      class="flex justify-center md:justify-start items-center hover:underline"
    >
      <span class="mr-1">{{ link.title }}</span>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
        <path
          fill-rule="evenodd"
          d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z"
          clip-rule="evenodd"
        />
      </svg>
    </a>
  </p>
  {% endfor %}
</div>
{% endmacro %}

{% macro links(data) %}
<div class="space-y-3 md:space-y-1">
  <p class="list-label mb-2">Links</p>
  {% for link in data.links %}
  <p class="p">
    {% if link.title == "Resume" %}
    <a download href="{{ link.url }}" class="flex justify-center md:justify-start items-center hover:underline">
      <span>{{ link.title }}</span>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="ml-1 w-5 h-5">
        <path
          d="M10.75 2.75a.75.75 0 00-1.5 0v8.614L6.295 8.235a.75.75 0 10-1.09 1.03l4.25 4.5a.75.75 0 001.09 0l4.25-4.5a.75.75 0 00-1.09-1.03l-2.955 3.129V2.75z"
        />
        <path
          d="M3.5 12.75a.75.75 0 00-1.5 0v2.5A2.75 2.75 0 004.75 18h10.5A2.75 2.75 0 0018 15.25v-2.5a.75.75 0 00-1.5 0v2.5c0 .69-.56 1.25-1.25 1.25H4.75c-.69 0-1.25-.56-1.25-1.25v-2.5z"
        />
      </svg>
    </a>
    {% else %}
    <a href="{{ link.url }}" class="hover:underline">{{ link.title }}</a>
    {% endif %}
  </p>
  {% endfor %}
</div>
{% endmacro %}

<!-- footer links -->
{% macro footer_row(data) %}
<div class="space-y-12 md:flex md:justify-between md:items-start md:space-x-8 md:space-y-0">
  <!-- Links -->
  {{ links(data) }}

  <!-- Chat -->
  {{ chat(data) }}

  <!-- Connect -->
  {{ connect(data) }}
</div>
{% endmacro %}
