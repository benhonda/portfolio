<!-- Articles -->
{% macro articles(data) %}
<div class="pg-section pg-section-border">
  <div class="pg-padding">
    <p class="section-label">Featured Articles</p>

    <div class="md:border-t border-white/30">
      {% for item in data.featured_articles %}

      <a href="#" class="pointer-events-none flex items-center justify-start py-7 md:border-b border-white/30 no-underline">
        <div class="flex-1">
          <div class="max-w-[16rem] md:max-w-full">
            <p class="section-label-text mb-2 font-normal">{{ item.type }} (coming soon)</p>
            <h3 class="h1-sub opacity-80 leading-tight">
              <!-- <span class="text-white">{{ item.title }}</span> -->
              {{ item.title }}
            </h3>
          </div>
        </div>

        <div class="flex-shrink-0 text-white/70">
          <svg
            class="w-16 h-16"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </div>
      </a>

      {% endfor %}
    </div>
  </div>
</div>
{% endmacro %}

